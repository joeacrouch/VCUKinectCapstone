<UserControl x:Class="KinectVision360.PeopleCount"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KinectVision360"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot">
        <TextBox x:Name="PeopleCountTxt" Text="{Binding Path=Counter, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="0"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="72" Background="Black" Opacity="0.985" Foreground="White" SelectionBrush="White" />
    </Grid>
</UserControl>
