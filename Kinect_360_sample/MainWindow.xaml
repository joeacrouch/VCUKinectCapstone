<Window x:Class="Kinect_360_sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        Title="Kinect Demo" Height="950" Width="1300" Loaded="Window_Loaded_1" Closing="Window_Closing_1">
    <Grid Name="mainGrid"> 
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition/>
            <RowDefinition Height="1*"></RowDefinition>

        </Grid.RowDefinitions>
        <StackPanel Name="stack1" Grid.Row="2">
                    <Label Grid.Row="2" Grid.Column="1" Content="Kinect Is On" HorizontalAlignment="Left" VerticalAlignment="Bottom" Name="kinect_status" Margin="10,10,0,0"/>
        </StackPanel>
        <k:KinectSensorChooserUI HorizontalAlignment="Left"  VerticalAlignment="Bottom" Name="sensorChooserUI"/>
        
       
        <Image Grid.Column="0"  Name="depthimage" Width="auto" Height="auto" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Image Grid.Column="0" Grid.Row="1" Name="colorimage" Width="auto" Height="auto" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Image Grid.Column="0" Grid.Row="2" Name="infraredimage" Width="auto" Height="auto" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Image Grid.Column="1" Grid.Row="0" Name="depthimage2" Width="auto" Height="auto" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Image Grid.Column="1" Grid.Row="1" Name="colorimage2" Width="auto" Height="auto" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        
        
        <Label Grid.Row="2" Grid.Column="1" Content="VCU Capstone 2016" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontWeight="Bold"/>

    </Grid>
</Window>
