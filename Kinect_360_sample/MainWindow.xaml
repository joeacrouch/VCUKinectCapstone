<Window x:Class="Kinect_360_sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        Title="Kinect Demo" Height="950" Width="1300" WindowState="Maximized" Loaded="Window_Loaded_1" Closing="Window_Closing_1">
    <Grid Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition/>
            <RowDefinition Height="1*"></RowDefinition>

        </Grid.RowDefinitions>
        <StackPanel Name="stack1" Grid.Row="2">
            <Label Grid.Row="2" Grid.Column="1" Content="Kinect Is On" HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="kinect_status" Margin="10,10,0,0"/>
        </StackPanel>
        <k:KinectSensorChooserUI HorizontalAlignment="Left"  VerticalAlignment="Bottom" Name="sensorChooserUI"/>


        <Image Grid.Column="0"  Name="depthimage" Width="auto" Height="auto" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Image Grid.Column="0" Grid.Row="1" Name="colorimage" Width="auto" Height="auto" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Image Grid.Column="0" Grid.Row="2" Name="skeletonimage" Width="auto" Height="auto" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="Hidden"/>
        <Image Grid.Column="1" Grid.Row="0" Name="depthimage2" Width="auto" Height="auto" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Image Grid.Column="1" Grid.Row="1" Name="colorimage2" Width="auto" Height="auto" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Image Grid.Column="1" Grid.Row="2" Name="image2" Width="auto" Height="auto" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Label Grid.Row="2" Content="VCU Capstone 2016" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <CheckBox Grid.Row="2" Content="Seated Mode" Height="Auto" VerticalAlignment="Center" Margin="10,202,558,92" Name="checkBoxSeatedMode" Checked="CheckBoxSeatedModeChanged" Unchecked="CheckBoxSeatedModeChanged" Visibility="Hidden"/>
        <CheckBox Grid.Row="2" Content="IR1 Mode" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="checkIR1Mode" Checked="SwitchRGBtoIR1" Unchecked="SwitchRGBtoIR1" Margin="10,0,0,110"/>
        <CheckBox Grid.Row="2" Content="IR2 Mode " Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="checkIR2Mode" Checked="SwitchRGBtoIR2" Unchecked="SwitchRGBtoIR2" Margin="10,0,0,90"/>

        <Button Content="Set Tilt" HorizontalAlignment="Left" x:Name="btnsetTilt" Click="btnsetTilt_Click_1" VerticalAlignment="Bottom" Width="44" Height="26" Grid.Row="2" Margin="10,0,0,10"/>
        <TextBox HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" x:Name="txttilt" VerticalAlignment="Bottom" Width="44" Grid.Row="2" Margin="10,0,0,39"/>
        <Button Content="Set Tilt" HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="btnsetTilt2" Click="btnsetTilt_Click_2" Width="44" Height="26" Grid.Row="2" Margin="59,0,0,10"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="59,0,0,39" TextWrapping="Wrap" Text="" x:Name="txttilt2" VerticalAlignment="Bottom" Width="44" Grid.Row="2"/>
    </Grid>
</Window>
